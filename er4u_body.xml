<?xml version="1.0" encoding="UTF-8"?>

<Robot name="er4_u">
	<KinBody name="Scorbot" >
		
		<modelsdir>/er4u_wrl</modelsdir>

		<Mass type="mimicgeom">
				<density>1000</density>
		</Mass>
		
		<Body name="Base" type="static">
			
			<Translation> 0 0 0 </Translation>
			<rotationaxis> 1 0 0 180 </rotationaxis>
			
			<Geom type="box">
				<render> base.wrl</render>
			</Geom>
		
		</Body>

		<Body name="shoulder" type="dynamic">
			
			<Translation> 0 0 10 </Translation>
			<rotationaxis> 0 0 0 0 </rotationaxis>
			
			<Geom type="box">
				<render> level_1.wrl</render>
			</Geom>
			
		</Body>

		<Joint circular="true" name="Joint0" type="hinge">

			<Body>Base</Body>
			<Body>shoulder</Body>
			<axis>0 0 1</axis>
			<Weight>1.0</Weight>

		</Joint>

		<Body name="arm0" type="dynamic">
			
			<Translation> 110 110 145 </Translation>
			<rotationaxis> 0 0 1 90 </rotationaxis>
			<rotationaxis> 0 1 0 90 </rotationaxis>
			
			<Geom type="box">
				<render> level_2.dae</render>
			</Geom>
			
		</Body>

		<Body name="arm1" type="dynamic">
			
			<Translation> -110 110 145 </Translation>
			<rotationaxis> 0 0 1 90 </rotationaxis>
			<rotationaxis> 0 1 0 90 </rotationaxis>
			
			<Geom type="box">
				<render> level_2_1.wrl</render>
			</Geom>
			
		</Body>

		<Joint circular="true" name="Joint1" type="hinge">
			<offsetfrom>arm0</offsetfrom>
			<anchor> -100 0 0 </anchor> 
			<Body>arm0</Body>
			<Body>arm1</Body>
			<Body>shoulder</Body>
			<axis>0 0 1</axis>
			<Weight>1.0</Weight>

		</Joint>

		<Body name="arm2" type="dynamic">
			
			<Translation> 100 345 145 </Translation>
			<rotationaxis> 0 0 1 90 </rotationaxis>
			<rotationaxis> 0 1 0 90 </rotationaxis>
			
			<Geom type="box">
				<render> level_2_2.wrl</render>
			</Geom>
			
		</Body>

		<Body name="arm3" type="dynamic">
			
			<Translation> -100 345 145 </Translation>
			<rotationaxis> 0 0 1 90 </rotationaxis>
			<rotationaxis> 0 1 0 90 </rotationaxis>
			
			<Geom type="box">
				<render> level_2_3.wrl</render>
			</Geom>
			
		</Body>

		<Joint circular="true" name="Joint2" type="hinge">
			<offsetfrom>arm2</offsetfrom>
			<anchor> -100 0 0 </anchor> 
			<Body>arm2</Body>
			<Body>arm3</Body>
			<Body>shoulder</Body>
			<axis>0 0 1</axis>
			<Weight>1.0</Weight>

		</Joint>

	</KinBody>

</Robot>